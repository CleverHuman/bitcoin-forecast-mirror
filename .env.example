# Databricks SQL Warehouse Configuration
# Copy this file to .env and fill in your values

# Your Databricks workspace hostname (without https://)
DATABRICKS_SERVER_HOSTNAME=your-workspace.cloud.databricks.com

# SQL Warehouse HTTP path (found in SQL Warehouse connection details)
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your-warehouse-id

# Personal Access Token (generate in User Settings > Developer > Access Tokens)
DATABRICKS_TOKEN=your-access-token

# Forecast horizon in days (365 = 1 year, 730 = 2 years, 1095 = 3 years)
FORECAST_DAYS=365

# Regressor toggles (true/false) - disable for testing/comparison
REGRESSOR_CYCLE=true          # Sin/cos cycle position, pre/post halving weights
REGRESSOR_DOUBLE_TOP=true     # Double-top pattern detection
REGRESSOR_CYCLE_PHASE=true    # Continuous cycle phase encoding
REGRESSOR_DECAY=true          # Drawdown decay curve adjustment
REGRESSOR_ENSEMBLE_ADJUST=true  # Bull run boost + drawdown reduction logic

# ============================================================================
# LIVE TRADING CONFIGURATION
# ============================================================================

# Trading mode (true = paper trading with simulated money, false = live trading)
PAPER_TRADING=true
# In paper mode: use live BTC price from Binance (no API key) so simulation reflects real market
PAPER_USE_LIVE_PRICES=true

# Capital & Position Sizing
INITIAL_CAPITAL=25000           # Starting capital in USD
MAX_POSITION_PCT=0.10           # Max position size as % of capital (10%)
MAX_TOTAL_EXPOSURE_PCT=0.70     # Max total exposure as % of capital (70%)

# Risk Limits
DAILY_LOSS_LIMIT_PCT=0.02       # Daily loss limit (2%) - pauses trading 24h
WEEKLY_LOSS_LIMIT_PCT=0.05      # Weekly loss limit (5%) - pauses trading 7d
MAX_DRAWDOWN_PCT=0.15           # Max drawdown (15%) - triggers kill switch
STOP_LOSS_PCT=0.08              # Per-position stop loss (8%)

# Execution Settings
MIN_TRADE_USD=500               # Minimum trade size in USD
FEE_PCT=0.10                    # Exchange fee percentage (0.1%)
SLIPPAGE_PCT=0.05               # Expected slippage (0.05%)

# Strategy Settings
FORECAST_WEIGHT=0.60            # Weight for forecast signals (60%)
LOOKFORWARD_DAYS=30             # Days ahead for forecast signal calculation
MIN_SIGNAL_SCORE=0.3            # Minimum signal score to trigger trade
MIN_TRADE_INTERVAL_HOURS=4      # Minimum hours between trades
FORECAST_REFRESH_HOURS=24       # Hours between forecast refreshes

# Trading Pair
TRADING_SYMBOL=BTCUSDT
BASE_ASSET=BTC
QUOTE_ASSET=USDT

# Binance API (required for live trading only)
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret

# Telegram Alerts (optional but recommended)
TELEGRAM_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Logging
LOG_LEVEL=INFO
