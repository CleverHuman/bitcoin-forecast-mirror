# Databricks SQL Warehouse Configuration
# Copy this file to .env and fill in your values

# Your Databricks workspace hostname (without https://)
DATABRICKS_SERVER_HOSTNAME=your-workspace.cloud.databricks.com

# SQL Warehouse HTTP path (found in SQL Warehouse connection details)
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your-warehouse-id

# Personal Access Token (generate in User Settings > Developer > Access Tokens)
DATABRICKS_TOKEN=your-access-token

# Forecast horizon in days (365 = 1 year, 730 = 2 years, 1095 = 3 years)
FORECAST_DAYS=365

# Regressor toggles (true/false) - disable for testing/comparison
REGRESSOR_CYCLE=true          # Sin/cos cycle position, pre/post halving weights
REGRESSOR_DOUBLE_TOP=true     # Double-top pattern detection
REGRESSOR_CYCLE_PHASE=true    # Continuous cycle phase encoding
REGRESSOR_DECAY=true          # Drawdown decay curve adjustment
REGRESSOR_ENSEMBLE_ADJUST=true  # Bull run boost + drawdown reduction logic
